extends layout

block content

  //- background image
  div(class="background-container")
    img(src="../images/background.jpg")
  
  //- header, include logo and login button
  div(class="main-header-container")
    div(class="logo")
      img(src="../images/logo.png")
    div(class="login-button" onclick="fb_login();")
      img(src="../images/facebook.svg")
      p Log in

  //- content for students
  div(class="student-button")
    a(href="student") Grab a Job!

  div(class="recruiter-button")
    a(href="company") Post a Job!

  div(class="container container-table")
    div(class="row vertical-center-row")
      div(class="text-center col-md-4 col-md-offset-4" id="register-pop-up")
        h2 Register As: 
        //- button(onclick="student_register()";) Student
        //- button(onclick="company_register()";) Company

  if (show_register_window)
    div
      h2 Register As: 
      button Student
      button Company