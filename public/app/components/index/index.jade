<!-- background image  -->
<div class="background-container">
  <image src="/images/background.jpg" \>
</div>

<div class="main-header-container">
  <div class="logo">
    <img src="/images/logo.png"/>
  </div>
  <div class="login-button" id="fb-login-wrapper" ng-click="fbToggle()">
    <img src="/images/facebook.svg"/>
    <p>{{ fbLoginText }}</p>
  </div>
</div>

<div class="student-button" ng-click="directStudentPage()">
  <div> Grab a Job! </div>
</div>

<div class="recruiter-button">
  <div ng-click="directCompanyPage()"> Post a Job! </div>
</div>

<div class="container container-table" ng-if="showLogin">
  <div class="row vertical-center-row">
    <div class="text-center col-md-4 col-md-offset-4" id="register-pop-up">
      <h2> Register As: </h2>
      <button ng-click="studentRegistration()"> Student </button>
      <button ng-click="companyRegistration()"> Company </button>
    </div>
  </div>
</div>